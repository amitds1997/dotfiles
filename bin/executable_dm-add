#!/usr/bin/env zsh

alias dm="git --git-dir=${HOME}/.dotfiles/ --work-tree=${HOME}"

# This script is to auto add all directories in which we might create new files but are not directly tracked by our dotfile manager (git)
dm add ${HOME}/.colima/default/colima.yaml
dm add ${HOME}/.condarc
dm add ${HOME}/.actrc
dm add ${HOME}/.finicky.js
dm add ${HOME}/.gnupg/gpg-agent.conf
dm add ${HOME}/.git-templates/
dm add ${HOME}/.ssh/config
dm add ${HOME}/.gitconfig
dm add ${HOME}/.psqlrc
dm add ${HOME}/bin/cron
dm add ${HOME}/bin/dm-add
dm add ${XDG_CONFIG_HOME}/brew
dm add ${XDG_CONFIG_HOME}/fsh
dm add ${XDG_CONFIG_HOME}/k9s/skin.yml
dm add ${XDG_CONFIG_HOME}/kitty
dm add ${XDG_CONFIG_HOME}/nvim
dm add ${XDG_CONFIG_HOME}/zsh
dm add ${XDG_CONFIG_HOME}/wezterm
