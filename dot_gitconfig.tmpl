[init]
  defaultBranch = main
  templatedir = ~/.git-templates
[core]
  pager = delta
  editor = nvim
[alias]
  undo = reset --soft HEAD~1
  amend = commit --amend
[http]
  sslverify = true
[diff]
  colorMoved = default
[merge]
  conflictStyle = zdiff3
[interactive]
  diffFilter = delta --color-only
[delta]
  features = unobtrusive-line-numbers side-by-side decorations
  syntax-theme = ansi
  navigate = true
[delta "decorations"]
  commit-decoration-style = box
  hunk-header-decoration-style = cyan box ul
[user]
  email = amitds1997@gmail.com
  name = Amit Singh
{{- if eq .chezmoi.os "darwin" }}
  signingkey = 340E4B8C64021984
{{- else if eq .chezmoi.os "linux" }}
  signingkey = B579D7201EF6CC59
{{- end }}
[include]
  path = ~/.gitconfig.local ; Contains [github] section
[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig
[branch]
  autosetuprebase = always
  autosetupmerge = always
[pull]
  rebase = true
[diff]
  renames = copies
  mnemonicprefix = true
  compactionHeuristic = true
[difftool]
  prompt = false
[gpg]
  program = gpg
[commit]
  gpgSign = true
[fetch]
  prune = true
[rerere]
  enabled = true
[push]
  autoSetupRemote = true
[rebase]
  autoStash = true
[credential]
{{- if eq .chezmoi.os "darwin" }}
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
{{- end }}
{{- if eq .chezmoi.os "linux" }}
	helper = /usr/bin/git-credential-manager
	credentialStore = gpg
{{- end }}
