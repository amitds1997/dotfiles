{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "completion": {
    "callSnippet": "Both",
    "keywordSnippet": "Both"
  },
  "workspace": {
    "checkThirdParty": false,
    "library": [
      "$VIMRUNTIME",
      "lua",
      "$XDG_DATA_HOME/nvim/lazy/telescope.nvim/lua",
      "$XDG_DATA_HOME/nvim/lazy/remote-nvim/lua",
      "$XDG_DATA_HOME/nvim/lazy/nvim-cmp/lua",
      "$XDG_DATA_HOME/nvim/lazy/lazy.nvim/lua",
      "$XDG_DATA_HOME/nvim/lazy/conform.nvim/lua"
    ],
    "ignoreDir": [
      "tests",
      "test"
    ],
    "userThirdParty": []
  }
}
